{% comment %}
  Projects page grid template with aspect-ratio thumbnails
  - Maintains consistent proportions for all images
  - Fully responsive
  - Supports optional GitHub links
{% endcomment %}

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  {% for project in site.projects %}
    <div class="col">
      <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
        <div class="card h-100 hoverable">
          {% if project.img %}
            <div class="project-thumb-container">
              {%
                include figure.liquid
                loading="eager"
                path=project.img
                alt="{{ project.title }} thumbnail"
                class="project-thumb-img"
              %}
            </div>
          {% endif %}
          <div class="card-body">
            <h2 class="card-title">{{ project.title }}</h2>
            <p class="card-text">{{ project.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if project.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if project.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ project.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </a>
    </div>
  {% endfor %}
</div>

<style>
  /* Aspect-ratio thumbnail container */
  .project-thumb-container {
    width: 100%;
    aspect-ratio: 4/3; /* adjust ratio as needed, e.g., 16/9, 1/1 */
    overflow: hidden;
    border-radius: 8px;
  }

  /* Make the image fill the container and crop if necessary */
  .project-thumb-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
</style>
